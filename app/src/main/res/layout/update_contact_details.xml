<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:text="Edit Contact Details"
        android:background="#BC4086D5"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_Fname"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:hint="Enter First Name"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_Lname"
        android:hint="Enter Last Name"
        android:drawableLeft="@drawable/ic_baseline_person_pin_24"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_phone"
        android:hint="Enter Phone Number"
        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:inputType="number"
        android:digits="0123456789"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_email"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:hint="Enter Email ID"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_Address"
        android:drawableLeft="@drawable/ic_baseline_address_24"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="Enter Address Name"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_update_emp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:layout_marginTop="20dp"
        android:text="Update Contact"
        android:textColor="#fff"
        android:textStyle="bold" />


</LinearLayout>